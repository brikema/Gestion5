pipeline {
        agent any
        stage ('Build') {
            steps {
                    echo 'Build..'
                    bat 'mvn clean install'
            }
        }
        stage('Test') {
                steps {
                    echo 'Testing..'
                    bat 'mvn test'
                }
            }
            stage('Deploy') {
                    steps {
                        echo 'Deploying....'
                         script {
                            try {
                                deploy adapters: [tomcat9(credentialsId: 'bricema', url: 'http://localhost:8080/')], contextPath: '/Gestion5', war: '**/*.war'
                                } catch (err) {
                            }
                         }
                    }
                }
}
